    <io.github.controlwear.virtual.joystick.android.JoystickView xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/joystickViewRight"
        android:layout_width="207dp"
        android:layout_height="195dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        custom:JV_backgroundColor="@android:color/transparent"
        custom:JV_borderColor="#7c00796b"
        custom:JV_borderWidth="8dp"
        custom:JV_buttonColor="#78ff6e40"
        custom:layout_constraintHorizontal_bias="1.0"
        custom:layout_constraintVertical_bias="1.0" />

    <io.github.controlwear.virtual.joystick.android.JoystickView xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/joystickViewLeft"
        android:layout_width="207dp"
        android:layout_height="195dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        custom:JV_backgroundColor="@android:color/transparent"
        custom:JV_borderColor="#7900796b"
        custom:JV_borderWidth="8dp"
        custom:JV_buttonColor="#7dff6e40"
        custom:JV_buttonDirection="both"
        custom:layout_constraintHorizontal_bias="0.0"
        custom:layout_constraintVertical_bias="1.0" />


    <android.support.constraint.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- arm button -->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/armLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btn_arm"
                android:layout_width="94dp"
                android:layout_height="78dp"
                android:background="@drawable/btn_arm"
                android:onClick="armBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/armTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="ARM"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_arm" />
        </android.support.constraint.ConstraintLayout>

        <!-- land button -->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/landLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/armLayout"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btn_land"
                android:layout_width="94dp"
                android:layout_height="78dp"
                android:background="@drawable/btn_land"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/landTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="LAND"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_land" />
        </android.support.constraint.ConstraintLayout>

        <!-- alt button -->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/altLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/landLayout"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btn_alt"
                android:layout_width="94dp"
                android:layout_height="78dp"
                android:background="@drawable/btn_alt_hold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/altTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="ALTCTL"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_alt" />
        </android.support.constraint.ConstraintLayout>

        <!-- manual button -->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/manualLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/altLayout"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btn_manual"
                android:layout_width="94dp"
                android:layout_height="78dp"
                android:background="@drawable/btn_manual"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/manualTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="MANUAL"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_manual" />
        </android.support.constraint.ConstraintLayout>


        <!-- calibrate button -->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/calibrateLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/manualLayout"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btn_calibrate"
                android:layout_width="94dp"
                android:layout_height="78dp"
                android:background="@drawable/btn_calibration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/calibrateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="CALIBRATE"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_calibrate" />
        </android.support.constraint.ConstraintLayout>


        <!-- network button -->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/networkLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/calibrateLayout"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btn_network"
                android:layout_width="94dp"
                android:layout_height="78dp"
                android:background="@drawable/disconnected"
                android:onClick="updateNetwork"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/networkTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="CONNECT"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_network" />
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>